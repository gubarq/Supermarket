@{
    ViewData["Title"] = "Order list";
    List<Order> orders = ViewBag.Orders;
}

<table id="table" class="table">
    <thead>
        <tr>
            <td>Date</td>
            <td>Price</td>
            <td>User Email</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
            @foreach(var order in orders)
            {
                <tr>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.TotalPrice</td>
                    <td>@(order.UserId is null ? "anonymous" : order.User.Email)</td>
                    <td>
                        <a href="~/Admin/Order/Details/@(order.Id)" class="primary-btn" style="text-align:center;">Details</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready( function () {
            $('#table').DataTable();
        });
    </script>
}